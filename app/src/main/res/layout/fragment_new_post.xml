<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/homepage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">


        <ImageView
            android:id="@+id/image1view"
            android:layout_width="316dp"
            android:layout_height="309dp"
            app:layout_constraintBottom_toTopOf="@+id/button_gallery"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_add_box_24"
            tools:layout_editor_absoluteX="47dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@+id/button_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.521"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <Button
            android:id="@+id/button_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Select from gallery"
            app:layout_constraintBottom_toTopOf="@+id/editPostText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928"
            tools:layout_editor_absoluteX="121dp" />

        <EditText
            android:id="@+id/textBox1"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="Description"
            android:layout_gravity="center"
            android:background="@drawable/shapeemail"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.988"
            tools:layout_editor_absoluteX="102dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm Upload Post"
            android:id="@+id/confirm_button"
            />

        </LinearLayout>


</FrameLayout>